<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
>

    <ImageView
        android:id="@+id/iv_alarm_task_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/slim_tool"
    />

    <TextView
        android:id="@+id/tv_alarm_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_alarm_task_icon"
        android:layout_toRightOf="@id/iv_alarm_task_icon"/>

    <TextView
        android:id="@+id/tv_alarm_task_time"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/tv_alarm_task_name"
        android:layout_toRightOf="@id/tv_alarm_task_name"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:layout_centerVertical="true"
    />
</RelativeLayout>